#!/bin/bash
echo "ssh-rsa " > /home/centos/.ssh/authorized_keys

rm -f /etc/sysconfig/network-scripts/ifcfg-ens3

echo "BOOTPROTO=none
NAME=eth0
DEVICE=eth0
GATEWAY=192.168.26.1
IPADDR=192.168.26.19
MTU=1500
NETMASK=255.255.255.0
ONBOOT=yes
TYPE=Ethernet
USERCTL=no" > /etc/sysconfig/network-scripts/ifcfg-eth0

nmcli device disconnect eth0
nmcli con reload
nmcli con up eth0
